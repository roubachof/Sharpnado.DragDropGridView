<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="Mvvm.Flux.Maui.Presentation.CustomViews.Toolbar"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Mvvm.Flux.Maui.Presentation.Converters"
             xmlns:gestures="clr-namespace:MR.Gestures;assembly=MR.Gestures"
             xmlns:sho="http://sharpnado.com"
             x:Name="RootLayout">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="TextTitleStyle"
                   BasedOn="{StaticResource TextTitleToolbar}"
                   TargetType="Label">
                <Setter Property="Margin" Value="30,10" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid x:Name="Grid"
              Padding="0,10"
              ColumnSpacing="0"
              RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="SafeAreaRowDefinition"
                               Height="{Binding Source={x:Reference RootLayout},
                                                Path=Height,
                                                Converter={converters:TopSafeAreaToGridLengthConverter},
                                                ConverterParameter=0}" />
                <RowDefinition Height="*" />
                <RowDefinition x:Name="SubtitleRowDefinition"
                               Height="0" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ButtonColumnDefinition"
                                  Width="0" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <BoxView Grid.Row="0"
                     Grid.RowSpan="3"
                     Grid.ColumnSpan="3"
                     BackgroundColor="{Binding Source={x:Reference RootLayout},
                                               Path=BackgroundColor}" />

            <gestures:ContentView x:Name="BackButton"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  IsVisible="{Binding Source={x:Reference RootLayout},
                                                      Path=ShowBackButton}">
                <Image Style="{StaticResource ImageSmallLarge}"
                       Source="{StaticResource IconBack}" />
            </gestures:ContentView>

            <Label x:Name="TitleLabel"
                   Grid.Row="1"
                   Grid.Column="1"
                   Style="{StaticResource TextTitleStyle}"
                   Text="{Binding Source={x:Reference RootLayout},
                                  Path=Title}"
                   TextColor="{Binding Source={x:Reference RootLayout},
                                       Path=ForegroundColor}" />

            <Label Grid.Row="2"
                   Grid.Column="1"
                   Style="{StaticResource TextBody}"
                   Margin="30,0,30,30"
                   Text="{Binding Source={x:Reference RootLayout},
                                  Path=Subtitle}"
                   TextColor="{Binding Source={x:Reference RootLayout},
                                       Path=ForegroundColor}" />

            <ContentView x:Name="CustomViewRoot"
                         Grid.Row="1"
                         Grid.RowSpan="2"
                         Grid.Column="2" />
        </Grid>
    </ContentView.Content>
</ContentView>
